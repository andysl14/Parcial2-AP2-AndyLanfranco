<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Andy Lanfranco Parcial 2</a> 
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <li class="nav-item px-3 dropdown show">
            <NavLink class="nav-link dropdown-toggle" href="" @onclick="() => expandSubMenu = !expandSubMenu">
                <span class="oi oi-folder" aria-hidden="true"></span> Registros
            </NavLink>

            @if (expandSubMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="Cobros">
                            <span class=" oi oi-dollar px-2" aria-hidden="true"></span> Registrar Cobros
                        </NavLink>
                    </li>

                </ul>
            }
        </li>

        <li class="nav-item px-3 dropdown show">
            <NavLink class="nav-link dropdown-toggle" href="" @onclick="() => expandSubMenu = !expandSubMenu ">
                <span class="oi oi-list" aria-hidden="true"></span> Consultas
            </NavLink>

            @if (expandSubMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="CVentas">
                            <span class=" oi oi-list px-2" aria-hidden="true"></span> Consultar Ventas
                        </NavLink>
                    </li>
                </ul>
            }

        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;


    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
